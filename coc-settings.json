{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  },

  "sumneko-lua.enable": true,
  "sumneko-lua.enableNvimLuaDev": true,
  "sumneko-lua.locale": "zh-cn",
  "sumneko-lua.prompt": true,
  "sumneko-lua.checkUpdate": true,
  "Lua.workspace.library": [
    "/usr/local/Caskroom/neovim-nightly/latest/nvim-osx64/share/nvim/runtime/lua",
    "/usr/local/Caskroom/neovim-nightly/latest/nvim-osx64/share/nvim/runtime/lua/vim",
    "/usr/local/Caskroom/neovim-nightly/latest/nvim-osx64/share/nvim/runtime/lua/vim/lsp",

    "~/.local/share/nvim/site/pack/packer/opt/packer.nvim/lua",
    "~/.local/share/nvim/site/pack/packer/opt/packer.nvim/lua/packer"
  ],
  "Lua.diagnostics.globals": ["vim", "packer_plugins"],
  "Lua.runtime.version": "Lua 5.4",

  "rust-analyzer.enable": true,
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.server.path": "~/.local/bin/rust-analyzer",
  "rust-analyzer.updates.checkOnStartup": true,
  "rust-analyzer.inlayHints.enable": true,
  "rust-analyzer.inlayHints.typeHints": true,

  "clangd.enabled": true,
  "clangd.checkUpdates": false,
  "clangd.fallbackFlags": ["-std=c++17"],

  "coc.source.around.enable": true,
  "coc.source.buffer.enable": true,
  "coc.source.file.enable": true,
  "coc.source.db.enable": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "json",
    "html",
    "javascript",
    "typescript"
  ],
  "suggest.noselect": false,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",

  "suggest.completionItemKindLabels": {
    "keyword": "",
    "variable": "",
    "value": "",
    "operator": "Ψ",
    "function": "ƒ",
    "reference": "渚",
    "constant": "",
    "method": "",
    "struct": "פּ",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "field": "料",
    "unit": "",
    "event": "鬒",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    "default": ""
  }
}
